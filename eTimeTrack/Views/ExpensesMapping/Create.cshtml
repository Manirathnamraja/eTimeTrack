@using eTimeTrack.Controllers
@using eTimeTrack.Helpers
@model eTimeTrack.Models.ProjectExpensesMapping

@{
    ViewBag.Title = ViewBag.Source + " Expense Mapping";
}

@Html.Partial("_Banner")
@Html.Partial("_InfoMessageRender")
@using (Html.BeginForm("CreateEdit", "ExpensesMapping", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProjectID)
    @Html.HiddenFor(model => model.MapID)
    @Html.Hidden("Source", (Source)ViewBag.Source)


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Project</label>
            <div class="col-md-10">
                <label class="labelFormValue" id="selectedProjectDisplay">@Session["SelectedProjectName"]</label>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Company</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CompanyID, null, "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CompanyID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Expenses Map Type</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectMapTable, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectMapTable, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Expenses Types</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ProjectTypeID, null, "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProjectTypeID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Std Types</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.StdExpTypeID, null, "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StdExpTypeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="pull-right">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

    </div>
}

<a href='@Url.Action("Index", "ExpensesMapping")' class="btn btn-primary" role="button">Back</a>


