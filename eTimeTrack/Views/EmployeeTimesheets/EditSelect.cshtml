@using eTimeTrack.Helpers

@{
    ViewBag.Title = "Edit Timesheet";
    ViewBag.BannerColour = AecomColour.Magenta;
}

@Html.Partial("_Banner")

@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Saved:</strong> @ViewBag.Message
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Employee", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmployeeId", (SelectList)ViewBag.EmployeeList, "Select", new { id = "employee", @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Timesheet Period", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="timesheetId" id="timesheet" class="form-control">
                    <option value="">Select</option>
                </select>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" id="submit" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


<a href="@Url.Action("Index", "Manage")" class="btn btn-primary">Back</a>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        UpdateTimePeriods();
        function UpdateTimePeriods() {
            $.post('@Url.Action("GetEmployeeTimesheetPeriods")', { employeeId: $('#employee').val() }).done(
                function (data) {
                    $('#timesheet').find('option').remove();

                    if (data.length == 0) {
                        $('#timesheet').append('<option value="">Select</option>');
                    }

                    for (var i = 0; i < data.length; i++) {
                        $('#timesheet').append('<option value="' + data[i].Value + '">' + data[i].Text + '</option>');
                    }
                });
        }

        $(document).ready(function () {
            $('#employee').change(function () {
                UpdateTimePeriods();
            });
        });
    </script>
}
