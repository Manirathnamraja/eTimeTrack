@using eTimeTrack.Helpers

@{
    ViewBag.Title = "Create Timesheet For User";
    ViewBag.BannerColour = AecomColour.Magenta;
}

@Html.Partial("_Banner")


@if(ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Saved:</strong> @ViewBag.Message
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Employee", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmployeeId", (SelectList)ViewBag.EmployeeList, "Select", new { id = "employee", @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Select" id="submit" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


<a href="@Url.Action("Index", "Manage")" class="btn btn-primary">Back</a>