@using eTimeTrack.Controllers
@using eTimeTrack.Helpers
@model eTimeTrack.ViewModels.ProjectPartsViewModel

@{
    ViewBag.Title = ViewBag.Source + " Project Part";
    ViewBag.BannerColour = AecomColour.Yellow;
}

@Html.Partial("_Banner")
@Html.Partial("_InfoMessageRender")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.part.PartID)
    @Html.Hidden("Source", (Source)ViewBag.Source)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.part.ProjectID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @if (Session["SelectedProject"] != null)
                {
                    if (Model.part.PartID == 0)
                    {
                        @Html.Hidden("ProjectID", Session["SelectedProject"], new { id = "selectedProjectId" })
                        <label class="labelFormValue" id="selectedProjectDisplay">@Session["SelectedProjectName"]</label>
                    }
                    else
                    {
                        @Html.HiddenFor(model => model.part.ProjectID)
                        @Html.HiddenFor(model => model.part.Project.ProjectNo)
                        @Html.HiddenFor(model => model.part.Project.Name)
                        <label class="labelFormValue">@Model.part.Project.DisplayName</label>
                    }
                }
                else
                {
                    @Html.DropDownListFor(model => model.part.ProjectID, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.part.ProjectID, "", new { @class = "text-danger" })
                }

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.part.PartNo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.part.PartNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.part.PartNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.part.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.part.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.part.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.part.Notes, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.part.Notes, new { @class = "form-control fullWidth", rows = 3 })
                @Html.ValidationMessageFor(model => model.part.Notes, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">TimesheetReviewer</label>
            <div class="col-md-10">
                @Html.DropDownList("employeesSelector", Model.employees, "Select", new { id = "employeesSelector", @class = "form-control employeesSelector"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.part.IsClosed, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.part.IsClosed)
                    @Html.ValidationMessageFor(model => model.part.IsClosed, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="pull-right">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

    </div>
}

<a href='@Url.Action("Index", "ProjectComponent", new {type = ProjectComponentType.ProjectPart})' class="btn btn-primary" role="button">Back</a>

