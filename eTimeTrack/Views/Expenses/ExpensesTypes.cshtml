@using eTimeTrack.Extensions
@using eTimeTrack.ViewModels
@model ExpensesTypesViewModel

@{
    ViewBag.Title = "Expenses Types";
}

@Html.Partial("_Banner")
@Html.Partial("_InfoMessageRender")

<table class="table table-striped table-hover data-table" width="100%">
    <thead>
        <tr>
            <th>Expense Type</th>
            <th>Default Task</th>
            <th>Default Variation</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.ExpensesTypesDetails.Count ; i++)
        {
            <tr>
                <td>
                    @Model.ExpensesTypesDetails[i].ExpenseType
                </td>
                <td>
                    @Html.DropDownListFor(m => m.ExpensesTypesDetails[i].TaskID, Model.Tasks, new { @class = "form-control"})
                </td>
                <td>
                    @Html.DropDownListFor(model => model.ExpensesTypesDetails[i].VariationID, Model.variations, new { @class = "form-control" })
                </td>
                <td>
                    <button class="btn btn-primary delete" data-id="@Model.ExpensesTypesDetails[i].ExpenseTypeID" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Manage")" class="btn btn-primary">Back</a>

@section Scripts {
    @Scripts.Render("~/bundles/notify")

}
