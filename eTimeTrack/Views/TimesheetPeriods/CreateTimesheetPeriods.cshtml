@using eTimeTrack.Helpers
@using eTimeTrack.ViewModels

@model TimesheetCreateViewModel

@{
    ViewBag.Title = "Create Periods";
    ViewBag.BannerColour = AecomColour.Orange;
}

@Html.Partial("_Banner")
<h4 id="dateRange"></h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Weeks, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Weeks, new { htmlAttributes = new { @class = "form-control", min = 1, Value = 1 } })
                @Html.ValidationMessageFor(model => model.Weeks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsClosed, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsClosed)
                    @Html.ValidationMessageFor(model => model.IsClosed, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="pull-right">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        <a href="@Url.Action("Index")" class="btn btn-primary">Back</a>
    </div>
}

@section scripts {
    <script>

        var startDate = moment('@ViewBag.StartDate', "DD-MMM-YYYY");

        function UpdateDateRange() {
            var endDate = moment(startDate).add(7 * parseInt($('#Weeks').val()) - 1, 'days');
            $('#dateRange').empty();
            $('#dateRange').text('Date Range: ' + startDate.format('DD-MMM-YYYY') + ' - ' + endDate.format('DD-MMM-YYYY'));
        }

        $(document).ready(function () {

            // Auto-update the date range
            UpdateDateRange();
            $('#Weeks').change(function () {
                UpdateDateRange();
            });

        });

    </script>
}